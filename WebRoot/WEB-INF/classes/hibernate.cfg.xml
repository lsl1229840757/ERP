<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

<session-factory>
	<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	<mapping resource="com/lsl/mapper/Dep.hbm.xml" />
	<mapping resource="com/lsl/mapper/Emp.hbm.xml" />
	<mapping resource="com/lsl/mapper/Supplier.hbm.xml" />
	<mapping resource="com/lsl/mapper/ProductType.hbm.xml" />
	<mapping resource="com/lsl/mapper/Role.hbm.xml" />
	<mapping resource="com/lsl/mapper/Product.hbm.xml" />
	<mapping resource="com/lsl/mapper/OrderModel.hbm.xml" />
</session-factory>

</hibernate-configuration>